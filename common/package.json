{
  "name": "@simple-photo-gallery/common",
  "version": "2.1.5",
  "description": "Shared utilities and types for Simple Photo Gallery",
  "license": "MIT",
  "author": "Vladimir Haltakov, Tomasz Rusin",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimplePhotoGallery/core"
  },
  "type": "module",
  "main": "./dist/gallery.js",
  "types": "./dist/gallery.d.ts",
  "exports": {
    ".": {
      "types": "./dist/gallery.d.ts",
      "import": "./dist/gallery.js",
      "require": "./dist/gallery.cjs"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "import": "./dist/theme.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./styles/photoswipe": "./dist/styles/photoswipe/photoswipe.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && tsup",
    "clean": "rm -rf dist",
    "compile": "tsc --noEmit",
    "check": "tsc --noEmit && eslint . && prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:fix": "prettier --write .",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "marked": "^16.0.0",
    "zod": "^4.0.14"
  },
  "peerDependencies": {
    "blurhash": "^2.0.5",
    "photoswipe": "^5.4.4"
  },
  "peerDependenciesMeta": {
    "blurhash": {
      "optional": true
    },
    "photoswipe": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "@types/photoswipe": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "prettier": "^3.4.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.38.0"
  }
}
