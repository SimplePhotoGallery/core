---
import type { GallerySection as GallerySectionType } from '../types/gallery';

interface Props {
  section: GallerySectionType;
  sectionIndex: number;
}

const { section, sectionIndex } = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="section-header">
      <h2>{section.title}</h2>
      <p>{section.description}</p>
    </div>
    <div class="gallery" id={`gallery-${sectionIndex}`}>
      {
        section.images.map((image) => (
          <div class="gallery-item">
            <a
              href={image.url}
              data-pswp-width={image.width}
              data-pswp-height={image.height}
              data-pswp-caption={`<p class="image-caption">${image.description}</p>`}>
              <img
                src={image.thumbnail.url}
                alt={image.alt}
                loading="lazy"
                width={image.thumbnail.width}
                height={image.thumbnail.height}
              />
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
