{
  "name": "simple-photo-gallery",
  "version": "2.0.18",
  "description": "Simple Photo Gallery CLI",
  "license": "MIT",
  "author": "Vladimir Haltakov, Tomasz Rusin",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimplePhotoGallery/core"
  },
  "homepage": "https://simple.photo",
  "files": [
    "dist"
  ],
  "bin": {
    "simple-photo-gallery": "./dist/index.js",
    "spg": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./lib/browser": {
      "types": "./dist/lib/browser.d.ts",
      "default": "./dist/lib/browser.js"
    }
  },
  "scripts": {
    "gallery": "SPG_TELEMETRY_PROVIDER=none tsx src/index.ts",
    "clean": "rm -rf dist",
    "compile": "tsc --noEmit",
    "build": "yarn clean && tsup",
    "check": "tsc --noEmit && eslint . && prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@simple-photo-gallery/common": "1.0.6",
    "@simple-photo-gallery/theme-modern": "2.0.18",
    "axios": "^1.12.2",
    "blurhash": "^2.0.5",
    "commander": "^12.0.0",
    "conf": "^13.0.1",
    "consola": "^3.4.2",
    "exifreader": "^4.32.0",
    "node-ffprobe": "^3.0.0",
    "semver-parser": "^4.1.8",
    "sharp": "^0.33.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "fs-extra": "^11.3.0",
    "jest": "^30.0.5",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.38.0"
  },
  "type": "module"
}
